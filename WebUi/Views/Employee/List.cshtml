@model List<WebUi.Models.Employee>

@{
    ViewBag.Title = "List";
}
<br/>

<div class="row">
    <div class="col-sm-10"><h1>Total Employee: @Model.Count</h1></div>
    <div class="row text-right">
        <a href="~/Employee/Create" class="btn btn-success">Add New</a>
    </div>
</div>
<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Employee ID</th>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
        <tr>
            <td>@e.Id</td>
            <td>
                <a href="~/Employee/Details?id=@e.Id">@e.EmployeeId</a>
            </td>
            <td>@e.FullName</td>
        </tr>
        }
    </tbody>
</table>

