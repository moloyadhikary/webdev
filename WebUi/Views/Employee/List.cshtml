@model List<WebUi.Models.Employee>

@{
    ViewBag.Title = "List";
}
<br/>

<div class="row">
    <div class="col-sm-10"><h1>Total Employee: @Model.Count</h1></div>
    <div class="row text-right">
        <a href="~/Employee/Create2" class="btn btn-success">Add New</a>
    </div>
</div>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>Controls</th>
        <th>Employee ID</th>
        <th>Full Name</th>
        <th>Department</th>
        <th class="text-right">Salary</th>
        <th>Active</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Id</td>
            <td>
                <a href="~/Employee/Delete?id=@e.Id" class="text-danger">Delete</a> &nbsp;
                <a href="~/Employee/Edit?id=@e.Id">Edit</a> &nbsp;
                @if (e.IsCurrent == true)
                {
                    <a href="~/Employee/ChangeStatus?id=@e.Id&status=0" class="text-danger">Inactivate</a>
                }
                else
                {
                    <a href="~/Employee/ChangeStatus?id=@e.Id&status=1" class="text-success">Activate</a>
                }
            </td>
            <td>
                <a href="~/Employee/Details?id=@e.Id">@e.EmployeeId</a>
            </td>
            <td>@e.FirstName @e.LastName</td>
            <td>@e.DepartmentName</td>
            <td class="text-right">$ @e.BasicSalary</td>
            <td>
                @if (e.IsCurrent == true)
                {
                    <span class="text-success"><b>Yes</b></span>
                }
                else
                {
                    <span class="text-danger"><b>No</b></span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

